<p id="notice"><%= notice %></p>

<p>
  <strong>Image data:</strong>
  <% if @post.image.present? %>
    <%= image_tag @post.image_url %>
  <% end %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
